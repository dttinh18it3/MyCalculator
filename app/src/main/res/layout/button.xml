<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clipToPadding="false">
    <GridLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLayout"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBackspace"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:drawableStart="@drawable/ic_backspace_black_24dp"
                android:linksClickable="false"
                android:paddingLeft="30dp"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnAllCancel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="AC"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:typeface="normal"
                android:visibility="visible"></Button>

            <Button
                android:id="@+id/btnBracket"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="()"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_btns_operator"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnSeven"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnEight"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnNine"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_btns_operator"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnFive"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnSix"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_btns_operator"
                android:text="*"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnOne"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnThree"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnDivision"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_btns_operator"
                android:text="/"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnPoint"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="%"
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_btn_equal"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="30dp"></Button>
        </LinearLayout>


    </GridLayout>

</RelativeLayout>